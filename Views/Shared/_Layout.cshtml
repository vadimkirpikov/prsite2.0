
<!DOCTYPE html>
<html lang="en-ru">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content=@ViewBag.Description>
    <meta name="keywords" content=@ViewBag.KeyWords>
    <link rel="stylesheet" href="~/staticfiles1/staticfiles2/css/style.css"/>
    <link rel="icon" href="~/staticfiles1/staticfiles2/css/favicon.png"/>
    <link rel="stylesheet" href="~/staticfiles1/staticfiles2/css/dark.css" id="dark-theme">
    <link rel="stylesheet" href="~/staticfiles1/staticfiles2/css/light.css" id="light-theme">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="~/staticfiles1/staticfiles2/css/dist/clipboard.min.js"></script>
    <script src="~/staticfiles1/staticfiles2/css/dom.js"></script>
    <script>loadTheme()</script>
</head>
<body>
<div class="mainbody">
    <header>
        <div id="header"><a href="/"><b class="main_title">PROGA.RU</b></a></div>
    </header>
    <button class="menu-button" onclick="showVerticalMenu()"></button>
    <nav class="vertical-menu-content" id="myDropdown">
            @{
                foreach (var tutorial in ViewBag.Tutorials)
                {
                    <a id=@tutorial.Id class="item" href=@tutorial.Url><b>@tutorial.Title</b></a>
                }
            }
    </nav>    
    <nav class="horizontal-nav-scroll">
        @foreach (var s in ViewBag.Sections)
        {
            <a class="horizontal-tutorial" href=@s.Url><b>@s.Title</b></a>
        }
    </nav>
</div>
<article class="render">
    @RenderBody()
</article>
<script>setClipboardButton()</script>
<footer style="">
    <button onclick="e()">ТЕМАСМЕНАБЛЯТЬ)</button>
    <p>ВКонтакте | Телеграм</p>
    <p>&copy; 2024 PROGA.RU. Все права защищены</p>
</footer>
</body>
</html>